<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddOfferActivity">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/base_toolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/shopTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Offer Name"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/offerNameEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="offer name"
                android:padding="12dp"
                android:background="@drawable/bg_rectangle"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/shopTxt"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/offerDescTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/offerNameEd"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/offerDescEd"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Description"
                android:gravity="top"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/bg_rectangle"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/offerDescTxt"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/offerTypeTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Offer Type"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/offerDescEd"/>

            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/categorySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Select type"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="14.5sp"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_padding="8dp"
                app:spinner_divider_color="@color/grey"
                app:spinner_divider_show="true"
                app:spinner_divider_size="0.4dp"
                app:spinner_item_array="@array/offer_type"
                app:spinner_item_height="46dp"
                android:background="@drawable/bg_rectangle"
                app:spinner_arrow_tint="@color/black"
                app:spinner_popup_animation="dropdown"
                app:spinner_popup_background="@drawable/bg_bottom_rounded"
                app:spinner_popup_elevation="4dp"
                app:spinner_selected_item_background="@color/grey_light"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/offerTypeTxt"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/offerPriceTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/categorySpinner"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/mobileEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price"
                android:gravity="top"
                android:padding="12dp"
                android:inputType="phone"
                android:background="@drawable/bg_rectangle"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/offerPriceTxt"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/offerImgTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Offer Image"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/mobileEd"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/offerImgCard"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="top"
                android:padding="12dp"
                android:inputType="phone"
                android:elevation="0dp"
                app:cardElevation="0dp"
                android:background="@drawable/bg_rectangle"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/offerImgTxt">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/bg_rounded_solid_white"
                    android:backgroundTint="@color/grey_light">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/offerImgRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/offerImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/offerAddImg"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:srcCompat="@drawable/ic_add"
                        android:padding="14dp"
                        android:background="@drawable/circle_white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="@color/white"
                android:background="@drawable/bg_rounded_solid_white"
                android:backgroundTint="@color/red"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintTop_toBottomOf="@+id/offerImgCard"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>