<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="28dp"
    android:padding="28dp"
    tools:context=".activity.OtpActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img"
        android:layout_width="280dp"
        android:layout_height="280dp"
        app:srcCompat="@drawable/offershub_splash"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/otpTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OTP VERIFICATION"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/img"/>

    <com.mukesh.OtpView
        android:id="@+id/pinView"
        android:shadowColor="@color/grey_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:inputType="number"
        android:itemBackground="@drawable/bg_rounded_stroke"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:hint="0000"
        app:OtpHideLineWhenFilled="true"
        app:OtpItemCount="4"
        android:cursorVisible="true"
        app:OtpCursorWidth="2dp"
        app:OtpLineWidth="1dp"
        app:itemSpacing="6dp"
        app:OtpItemHeight="44dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:OtpItemWidth="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otpTxt"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/verifyLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/pinView">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/verifyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:textColor="@color/white"
            android:background="@drawable/bg_rounded_solid_white_8"
            android:backgroundTint="@color/red"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/resendOtpTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend OTP"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verifyLinear"/>

</androidx.constraintlayout.widget.ConstraintLayout>