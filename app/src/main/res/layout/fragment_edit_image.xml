<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.EditImageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/shopImageConstraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/titleTxt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Shop Images"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/editRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_edit_image_layout"
                tools:itemCount="3"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/titleTxt1"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/shopUploadCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/editRecycler"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="12dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:text="Upload"
                        android:textSize="16sp"
                        android:textAlignment="center"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/grey_light"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        app:srcCompat="@drawable/ic_upload"
                        app:tint="@color/red"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/offerImageConstraint1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/offerTitleTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Offer Images"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/editOfferRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_edit_image_layout"
                tools:itemCount="3"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/offerTitleTxt"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/offerUploadCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/editOfferRecycler"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="12dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:text="Upload"
                        android:textSize="16sp"
                        android:textAlignment="center"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/grey_light"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        app:srcCompat="@drawable/ic_upload"
                        app:tint="@color/red"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shopconstraint"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Shop Images"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/imageCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24sp"
            android:layout_marginBottom="6dp"
            app:cardCornerRadius="16dp"
            android:elevation="4dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/grey_light"
            app:layout_constraintTop_toBottomOf="@+id/titleTxt">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/editImg"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/addImg"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:srcCompat="@drawable/ic_add"
                    app:tint="@color/white"
                    android:padding="14dp"
                    android:background="@drawable/circle_white"
                    android:backgroundTint="@color/black_30"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/uploadshopImg"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:srcCompat="@drawable/ic_upload"
                    android:visibility="gone"
                    app:tint="@color/red"
                    android:padding="4dp"
                    android:background="@drawable/circle_white"
                    android:backgroundTint="@color/black_30"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/editDelete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_delete"
                    app:tint="@color/white"
                    android:background="@drawable/circle_white"
                    android:backgroundTint="@color/black_30"
                    android:padding="4dp"
                    android:visibility="gone"
                    android:layout_marginEnd="4dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageClear"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_close_circle"
                    app:tint="@color/white"
                    android:background="@drawable/circle_white"
                    android:backgroundTint="@color/black_30"
                    android:padding="4dp"
                    android:visibility="gone"
                    android:layout_marginEnd="4dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/offerImageConstraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleofferTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Offer Images"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/offer2image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@+id/titleofferTxt">

            <androidx.cardview.widget.CardView
                android:id="@+id/imageofferCard1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24sp"
                android:layout_marginBottom="6dp"
                app:cardCornerRadius="16dp"
                android:elevation="4dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/grey_light"
                app:layout_constraintTop_toBottomOf="@+id/titleTxt">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/editofferImg1"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/addofferImg1"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:srcCompat="@drawable/ic_add"
                        app:tint="@color/white"
                        android:padding="14dp"
                        android:background="@drawable/circle_white"
                        android:backgroundTint="@color/black_30"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/uploadofferImg1"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_upload"
                        app:tint="@color/red"
                        android:padding="2dp"
                        android:background="@drawable/circle_white"
                        android:backgroundTint="@color/black_30"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/editofferDelete1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/ic_delete"
                        app:tint="@color/white"
                        android:background="@drawable/circle_white"
                        android:backgroundTint="@color/black_30"
                        android:padding="4dp"
                        android:visibility="gone"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/offerClose1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/ic_close_circle"
                        app:tint="@color/white"
                        android:background="@drawable/circle_white"
                        android:backgroundTint="@color/black_30"
                        android:padding="4dp"
                        android:visibility="gone"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/imageofferCard2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24sp"
                android:layout_marginBottom="6dp"
                app:cardCornerRadius="16dp"
                android:elevation="4dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/grey_light"
                app:layout_constraintTop_toBottomOf="@+id/titleTxt">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/editofferImg2"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/addofferImg2"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:srcCompat="@drawable/ic_add"
                        app:tint="@color/white"
                        android:padding="14dp"
                        android:background="@drawable/circle_white"
                        android:backgroundTint="@color/black_30"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/uploadofferImg2"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_upload"
                        app:tint="@color/red"
                        android:padding="4dp"
                        android:background="@drawable/circle_white"
                        android:backgroundTint="@color/black_30"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/editofferDelete2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/ic_delete"
                        app:tint="@color/white"
                        android:background="@drawable/circle_white"
                        android:backgroundTint="@color/black_30"
                        android:padding="4dp"
                        android:visibility="gone"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/offerClose2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/ic_close_circle"
                        app:tint="@color/white"
                        android:background="@drawable/circle_white"
                        android:backgroundTint="@color/black_30"
                        android:padding="4dp"
                        android:visibility="gone"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/offer2image"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/imageofferCard3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24sp"
                android:layout_marginBottom="6dp"
                app:cardCornerRadius="16dp"
                android:elevation="4dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/grey_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/editofferImg3"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/addofferImg3"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:srcCompat="@drawable/ic_add"
                        app:tint="@color/white"
                        android:padding="14dp"
                        android:background="@drawable/circle_white"
                        android:backgroundTint="@color/black_30"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/uploadofferImg3"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_upload"
                        app:tint="@color/red"
                        android:padding="4dp"
                        android:background="@drawable/circle_white"
                        android:backgroundTint="@color/black_30"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/editofferDelete3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/ic_delete"
                        app:tint="@color/white"
                        android:background="@drawable/circle_white"
                        android:backgroundTint="@color/black_30"
                        android:padding="4dp"
                        android:visibility="gone"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/offerClose3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/ic_close_circle"
                        app:tint="@color/white"
                        android:background="@drawable/circle_white"
                        android:backgroundTint="@color/black_30"
                        android:padding="4dp"
                        android:visibility="gone"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>